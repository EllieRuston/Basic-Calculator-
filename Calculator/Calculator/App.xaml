<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.App">
    <Application.Resources>
        <!--Light colours-->
        <Color x:Key="BackgroundLight">White</Color>
        <Color x:Key="TextLight">#483EB0</Color>

        <!--Dark colours-->
        <Color x:Key="BackgroundDark">#131</Color>
        <Color x:Key="TextDark">White</Color>
        
        <!--Styles-->
        <Style x:Key="ContainerBackgroundColor"
               TargetType="StackLayout">
            <Setter Property="BackgroundColor"
                    Value="{AppThemeBinding Dark={DynamicResource BackgroundDark}, Light={DynamicResource BackgroundLight}}"/>
        </Style>

        <Style x:Key="TextColor"
               TargetType="Label">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Dark={DynamicResource TextDark}, Light={DynamicResource TextLight}}"/>

        </Style>
        
    </Application.Resources>
</Application>